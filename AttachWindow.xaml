<Window x:Class="Alienlab.DMT.AttachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attach Database" Height="200" Width="400">
  <StackPanel Margin="10">
    <TextBlock>Choose a connection string:</TextBlock>
    <ComboBox
       Margin="0 4 0 10"
      IsEditable="True" 
        ItemsSource="{Binding Path=ConnectionStrings}" 
        SelectedIndex="{Binding SelectedIndex, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" 
        Text="{Binding Text, UpdateSourceTrigger=LostFocus}"
        />
    <TextBlock>Choose logical name for the database:</TextBlock>
    <TextBox 
       Margin="0 4 0 20" DataContext=""></TextBox>
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
      <Button Content="Attach" Padding="20 2 20 2" />
    </StackPanel>
  </StackPanel>
</Window>
